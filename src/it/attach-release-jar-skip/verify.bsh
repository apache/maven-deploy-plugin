import java.io.*;
import java.util.*;

String[] mustBePresentPaths =
{
    "org/apache/maven/its/deploy/arj/test/maven-metadata.xml",
    "org/apache/maven/its/deploy/arj/test/1.0/test-1.0.pom",
    "org/apache/maven/its/deploy/arj/test/1.0/test-1.0.jar",
};

String[] mustBeAbsentPaths =
{
    "org/apache/maven/its/deploy/arj/test/1.0/test-1.0-sources.jar",
};

for ( String path : mustBePresentPaths )
{
    File file = new File( new File( basedir, "target/repo" ), path );
    System.out.println( "Checking for existence of " + file );
    if ( !file.isFile() )
    {
        throw new FileNotFoundException( "Missing: " + file.getAbsolutePath() );
    }
}

for ( String path : mustBeAbsentPaths )
{
    File file = new File( new File( basedir, "target/repo" ), path );
    System.out.println( "Checking for existence of " + file );
    if ( file.isFile() )
    {
        throw new FileNotFoundException( "Found: " + file.getAbsolutePath() );
    }
}

return true;
